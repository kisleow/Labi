#include <stdio.h>
#include <math.h>
#include <stdlib.h>

int main()
{
int n;
printf("n: ");
scanf("%d", &n);
float y = M_PI;
int m = 0;
float x;
float r;
float s= 0;
        for(int i = 0; i < n; i++)
        {
        x = ((float)rand())/RAND_MAX*2 - 1;
        r = ((float)rand())/RAND_MAX*2 - 1;
        if((pow(x, 2) + pow(r, 2)) <= 1)
                {
                ++m;
                }


        }

s=4.0f*m/n;

printf("y:\t");
printf("%.5f\n", y);
printf("s:\t");
printf("%.5f\n", s);
printf("m:\t");
printf("%d\n", m);
return 0;

}
